@model List<Blog>
@{
    ViewData["Title"] = "Petro Blog | Petroteks";
    ViewData["Description"] = "Petrol, sondaj hakkında bilinmesi gerekenler";
    ViewData["MetaTags"] = $"<meta name='twitter:image:src' content='{WebsiteContext.CurrentWebsite.Name}/images/logopetroteks.png'><meta name='twitter:card' content='summary' /> <meta name='twitter:site' content='{WebsiteContext.CurrentWebsite.Name}/Bloglar'/> <meta name='twitter:creator' content='@Petroteks' /> <meta property='og:title' content='PetroBlog sondaj hakkında tüm gelişmeler'> <meta property='og:type' content='website'> <meta property='og:description' content='PetroBlog ile sondaj sektöründeki tüm gelişmeleri tanımları ve özellikleri olarak detaylı takip edebilirsiniz.'> <meta property='og:image' content='{WebsiteContext.CurrentWebsite.Name}/images/logopetroteks.png'> <meta property='og:url' content='{WebsiteContext.CurrentWebsite.Name}/Bloglar'/> <meta property='og:title' content='PetroBlog sondaj hakkında tüm gelişmeler' />";
    ViewData["Keywords"] = "Petro Blog, Petroteks, Petroteks Blog, Sondaj, Sondaj haberleri, Petrol haberleri";
}

 
 

 

            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4"> 
                        <img src="../BlogImages/@item.PhotoPath" class="" alt="@item.Name"/>
                        <h4 class=""><a href="" title="@item.Name">@item.Name</a></h4>
                        <a class="" asp-area="" asp-controller="Home" asp-action="BlogDetail" asp-route-title="@GetFriendlyTitle(item.Title)" asp-route-id="@item.id" title="Details">Detay</a> 
                </div>
            }


 