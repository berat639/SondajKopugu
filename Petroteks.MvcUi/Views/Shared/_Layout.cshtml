<!DOCTYPE html>
<html lang="tr">

<head>

    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <meta charset="utf-8">
    @Html.Raw(ViewData["MetaTags"])
    <meta name="author" content="Sondaj Kopugu">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5" />
    <link href="~/images/cropped-favicon-32x32.png" rel="icon">
    <link href="~/NewLayout/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Link -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,600,700,700i&display=swap|Montserrat:300,400,500,600,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i&display=swap|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link href="~/NewLayout/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" /> 
    <link rel="preload" href="~/NewLayout/vendor/icofont/icofont.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="~/NewLayout/vendor/boxicons/css/boxicons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link href="~/NewLayout/vendor/animate.css/animate.min.css" rel="stylesheet" />
    @*<link href="~/NewLayout/vendor/remixicon/remixicon.css" rel="stylesheet" />*@
    @*<link href="~/NewLayout/vendor/venobox/venobox.css" rel="stylesheet" />*@
    <link href="~/NewLayout/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link rel="preload" href="~/NewLayout/css/style.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="~/NewLayout/css/style.css"></noscript>

</head>
<body itemscope="" itemtype="https://schema.org/WebPage">



    <header id="header" class="d-flex align-items-center">

        <div class="container d-flex align-items-center">
            <div class="logo mr-auto">
                <!-- Uncomment below if you prefer to use an image logo -->
                <h1 class="text-light"><a asp-area="" asp-controller="Home" asp-action="Index" title="logo" class="scrollto"><img src="~/images/logopetroteks.png" alt="logo" /></a></h1>
                <!-- <a href="#header" class="scrollto"><img src="img/logo.png" alt="" class="img-fluid"></a> -->
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    @await Component.InvokeAsync("Navbar")
                </ul>
            </nav>

            <!-- .main-nav -->

        </div>
    </header><!-- #header -->
    <!--==========================
      Intro Section
    ============================-->
    @RenderBody()

    <!--==========================
      Footer
    ============================-->


    <footer id="footer">

        @await Component.InvokeAsync("Footer")
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>Sondaj Kopugu</strong>. All Rights Reserved
            </div>

        </div>
    </footer>


    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="~/NewLayout/vendor/jquery/jquery.min.js"></script>
    <script src="~/NewLayout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/NewLayout/vendor/jquery.easing/jquery.easing.min.js"></script>*@
    <script src="~/NewLayout/vendor/jquery-sticky/jquery.sticky.js"></script>
    @*<script src="~/NewLayout/vendor/waypoints/jquery.waypoints.min.js"></script>*@
    <script src="~/NewLayout/vendor/counterup/counterup.min.js"></script>
    <script src="~/NewLayout/vendor/isotope-layout/isotope.pkgd.js"></script>
    <script src="~/NewLayout/vendor/venobox/venobox.min.js"></script>
    <script src="~/NewLayout/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/NewLayout/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
    <!-- Contact Form JavaScript File -->
    <!-- Template Main Javascript File -->
    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    </script>



    <!--[if lt IE 10]><script type="text/javascript" src="../js/placeholder.js"></script><![endif]-->
    @RenderSection("Scripts", required: false)
</body>
</html>
