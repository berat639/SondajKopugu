@model NoticeViewModel
@{
    ViewData["Title"] = "PopUp Duyuru";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <h4 class="card-title">Başlangıç Tarihi</h4>
                    <div class="form-group">
                        <input type="datetime-local" asp-for="StartDate" class="form-control">
                    </div>
                    <h4 class="card-title">Bitiş Tarihi</h4>
                    <div class="form-group">
                        <input type="datetime-local" asp-for="EndDate" class="form-control">
                    </div>
                    <h4 class="card-title">Duyuru Editörü</h4>
                    <div class="form-group">
                        <textarea id="editor1" name="Content">
                           @Html.Raw(Model.Content)
                        </textarea>
                    </div>
                    <br />
                    <center><input type="submit" class="btn btn-success" value="Kaydet" /></center>
                }
            </div>
        </div>
    </div>
</div>