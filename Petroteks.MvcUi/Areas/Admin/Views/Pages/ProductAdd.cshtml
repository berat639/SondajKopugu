@model ProductViewModel
@{
    var photoPath = $"~/ProductImages/{Model.PhotoPath}";
}

@await Component.InvokeAsync("CategoryTree", new { website = CurrentWebsite })


    <form enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="id" />
        @if (!string.IsNullOrWhiteSpace(Model.PhotoPath))
        {
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-subtitle">Ürün Fotoğrafı</h6>
                            <img class="img-fluid" src="@photoPath" alt="@Model.SupTitle" asp-append-version="true" />
                        </div>
                    </div>
                </div>
            </div>

        }
        <div class="row mt-2">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori İD</h4>
                        <h6 class="card-subtitle">Kategori ağacında numarayı burada giriniz.</h6>

                        <div class="form-group">
                            <input type="number" asp-for="Categoryid" class="form-control">
                        </div>
                    </div>
                </div>
            </div>




            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Resim Yükle</h4>
                        <h6 class="card-subtitle">Ürün Fotoğrafını burada giriniz.</h6>
                        <div class="input-group mb-3">

                            <div class="custom-file">
                                <input type="file" asp-for="Image" class="custom-file-input">
                                <label class="custom-file-label">Dosya Seç</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row mt-2">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Başlık</h4>
                        <h6 class="card-subtitle">Ürün Başlığını burada giriniz</h6>

                        <div class="form-group">
                            <input type="text" asp-for="SupTitle" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Alt Başlık</h4>
                        <h6 class="card-subtitle">Ürün Alt Başlığını burada giriniz</h6>

                        <div class="form-group">
                            <input type="text" asp-for="SubTitle" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="form-check form-check-inline">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" asp-for="IsActive" checked>
                        <label class="custom-control-label" asp-for="IsActive">Ürün Gözüksün Mü?</label>
                    </div>
                </div>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sıra Önceliği</h4>
                <div class="form-group">
                    <input type="number" class="form-control" asp-for="Priority" aria-describedby="Priority" placeholder="Öncelik">
                </div>
            </div>
        </div>

        



        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Meta Açıklama</h4>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Description" aria-describedby="Meta Açıklama" placeholder="MetaDescription">
                    <small id="" class="form-text text-muted">Karakter sayısı kuralı girilecek</small>
                </div>
                <h4 class="card-title">Meta Anahtar kelime</h4>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Keywords" aria-describedby="MetaKeyword" placeholder="MetaKeyword">
                    <small id="name" class="form-text text-muted">Anahtar Kelimeleri lütfen virgül ile ayırın.</small>
                </div>
                <h4 class="card-title">Sayfa Başlığı</h4>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Title" aria-describedby="MetaTitle" placeholder="MetaTitle">
                    <small id="name" class="form-text text-muted">Anahtar Kelimeleri lütfen virgül ile ayırın.</small>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" asp-for="MetaTags" placeholder="Meta İnputları">

                            </textarea>
                </div>
                <h4 class="card-title">Content Editör</h4>
                <div class="form-group">
                    <textarea id="editor4" name="Content">
                                @Html.Raw(Model.Content)
                    </textarea>
                </div>




            </div>
        </div>
        <center><button class="btn btn-success" type="submit">Kaydet</button></center>

    </form>





@section Scripts{

}